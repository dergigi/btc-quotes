@import "colors.scss";

.main {
  position: relative;
}

.mb-wrap {
  margin: 20px auto;
  padding: 20px;
  position: relative;
  width: 300px;
}

.mb-wrap p {
  margin: 0;
  padding: 0;
}

.mb-wrap blockquote {
  margin: 0;
  padding: 0;
  position: relative;
}

.mb-wrap cite {
  font-style: normal;
}

.mb-style-2 blockquote {
  padding-top: 150px;
  pointer-events: none;
}

.mb-style-2 blockquote:after {
  background: url("<%= asset_path('bitcoin.png') %>") repeat scroll 0 0 rgba(247, 147, 26, 1);
  border-radius: 50% 50% 50% 50%;
  color: rgba(255, 255, 255, 0.5);
  content: " ";
  font-family: 'icons';
  font-size: 70px;
  height: 130px;
  left: 50%;
  line-height: 130px;
  margin-left: -65px;
  position: absolute;
  text-align: center;
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.1);
  top: 0;
  width: 130px;
  pointer-events: all;
  cursor: pointer;
}

.mb-style-2 blockquote:before {
  border-left: 5px solid $btc-orange-5p;
  border-radius: 50% 50% 50% 50%;
  content: "";
  height: 500px;
  left: -50px;
  position: absolute;
  top: 0;
  width: 500px;
  z-index: -1;
}

.mb-style-2 blockquote p {
  color: white;
  display: inline;
  font-family: Baskerville, Georgia, serif;
  font-style: italic;
  font-size: 28px;
  line-height: 46px;
}

.mb-attribution {
  text-align: right;
}

.mb-author {
  color: $btc-orange;
  font-size: 18px;
  font-weight: bold;
}

.mb-author a:before {
  content: "â€” ";
}

.mb-author a {
  text-decoration: none;
}

cite a {
  color: $btc-orange;
  font-style: italic;
}

cite a:hover {
  color: $btc-orange-bright;
}
